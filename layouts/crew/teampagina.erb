<% render '/partials/header.*', image: item[:foto], extra_classes: '-large' do %>
Team <%= item[:teamnaam] %> <%= item[:year] %>
<% end %>

<% section :yellow do %>
<h1>
  <%= item[:teamnaam] %>

  <span class="sneaky">
    <%= item[:sneaky] %>
  </span>
</h1>

<blockquote>
  <%= yield %>
  <div class="quoteteamlead">
    <% if item[:teamleden] %>
    <%= item[:teamleden].first[:naam] %>, Team Lead (<%= item[:teamnaam] %>)
    <% end %>
  </div>
</blockquote>
</div>
<% end %>

<% if item[:teamleden] %>
  <% section :blue do %>
    <h1>Teamleden</h1>
    <div class="team-members-grid">
      <% item[:teamleden].each do |lid| %>
        <div class="team-member-card">
          <h3 class="name"><%= lid[:naam] %></h3>
          <p>
            <%= lid[:functie] %><br>
            <%= lid[:opleiding] %><br>
            <%= lid[:school] %><br>
          </p>
          <img class="picture" src="/assets/images/org/<%= lid[:photo] %>" alt="">
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>


<% section :red do %>
<h1>Meet the Teams</h1>

<% crew_of(item[:year]).each do |team| %>
<div class="teamcard">
  <a href="<%= team.path %>">
    <p><%= team[:teamnaam] %></p>
    <img class="img-responsive portfolio-item" src="<%= team[:foto] %>" alt="">
  </a>
</div>
<% end %>
<% end %>
