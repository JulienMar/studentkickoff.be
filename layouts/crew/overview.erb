<% render '/partials/header.*', image: '/assets/images/design/header1.png' do %>
Crew of
<!-- Single button -->
<div class="btn-group dropdown">
  <span class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <%= @item[:year] %> <i class="glyphicon glyphicon-menu-down"></i>
  </span>
  <ul class="dropdown-menu">
    <% crew_years.each do |y| %>
    <li>
      <li><a href="<%= crew_item_of(y).path %>"><%= y %></a></li>
    </li>
    <% end %>
  </ul>
</div>
<% end %>

<% section :yellow do %>
<div class="row">
  <div class="col-md-8" style="z-index: 2;">
    <figure>
      <img class="img-responsive" src="/assets/images/organisatie.jpg" alt="">
    </figure>
  </div>
  <div class="col-md-4">
    <h3>De organisatie</h3>
    <p>De Student Kick-Off organisatie bestaat uit een groep overenthousiaste studenten die zich vrijwillig maandenlang inzetten om elk jaar opnieuw aan het begin van het academiejaar meer dan 30.000 studenten te mogen verwelkomen in hun favoriete studentenstad! Wat 11 jaar geleden begon met een groepje van 7 studenten is op vandaag uitgegroeid tot een organisatie met meer dan 55 team leden. </p>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <p>De kern bestaat uit:</p>
    <ul>
      <li>1 <a href="/crew/<%= latest_crew_year %>/algemeencoordinator">Algemeen Coördinator</a></li>
      <li>1 <a href="/crew/<%= latest_crew_year %>/juridische">Juridische verantwoordelijke</a></li>
      <li>7 Team Leads</li>
    </ul>
  </div>
  <div class="col-md-6">
    <p>Ieder team bestaat uit:</p>
    <ul>
      <li>1 Team Lead</li>
      <li>Coördinatoren</li>
      <li>Crew Leads</li>
    </ul>
  </div>
</div>
<% end %>

<% section :red do %>
<h1>Meet the Teams</h1>

<% crew_of(@item[:year]).each do |team| %>
<div class="col-md-3 col-sm-6 col-xs-12">
  <div class="teamcard">
    <a href="<%= team.path %>">
      <p><%= team[:teamnaam] %></p>
      <img class="img-responsive portfolio-item" src="<%= team[:foto] %>" alt="">
    </a>
  </div>
</div>
<% end %>
<% end %>
