<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= item[:teamnaam] %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <img class="img-responsive" src="<%= item[:foto] %>" alt="">
    </div>
    <div class="col-md-4">
      <h3>De leden en hun taken</h3>
      <%= yield %>
    </div>

  </div>
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">Teamleden</h3>
    </div>

    <% item[:teamleden].each do |lid| %>
    <div class="col-sm-3 col-xs-6" class="thumbnail">
      <div class="caption">
        <h3><%= lid[:naam] %></h3>
        <p>
          <%= lid[:functie] %><br>
          <%= lid[:opleiding] %><br>
          <%= lid[:school] %><br>
          <a href="mailto:<%= lid[:email] %>"><%= lid[:email] %></a>
        </p>
      </div>
      <img src="<%= lid[:foto] %>" class="img-responsive portfolio-item" alt="">
    </div>
    <% end %>
  </div>
</div>
