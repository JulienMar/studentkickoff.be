<% render '/partials/header.*', image: item[:foto], extra_classes: 'teamheader' do %>
Team <%= item[:teamnaam] %>
<% end %>

<div class="section1">
  <div class="container">
    <div class="row">
      <h1><%= item[:teamnaam] %>
      <% if item[:teamnaam] == 'IT' %>
        <span class="hiddenh1">aka team best<span>
      <% end %>

      </h1>
    </div>

    <div class="row">
      <div class="col-sm-12 col-md-12">
          <blockquote >
            <%= yield %>
            <div class="quoteteamlead">
            <% if item.key?(:teamleden) %>
              <%= item[:teamleden].first[:naam] %>, Team Lead (<%= item[:teamnaam] %>)
            <% end %>
            </div>
          </blockquote>
        </div>
      </div>
    </div>
  </div>
</div>
<% if item.key?(:teamleden) %>
  <div class="section3">
    <div class="container">
      <div class="row">
        <h1>Teamleden</h1>

        <% item[:teamleden].each do |lid| %>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 ">
          <div class="teamlidcard">
            <div class="caption">
              <h3><%= lid[:naam] %></h3>
              <p>
                <%= lid[:functie] %><br>
                <%= lid[:opleiding] %><br>
                <%= lid[:school] %><br>
              </p>
            </div>
            <img src="/assets/images/org/<%= lid[:foto] %>" class="img-responsive portfolio-item" alt="">
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
<div class="section2">
  <div class="container">
    <div class="row">

      <h1>Meet the Teams</h1>

      <% teams.each do |team| %>
      <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="teamcard">
          <a href="<%= team.path %>">
            <p><%= team[:teamnaam] %></p>
            <img class="img-responsive portfolio-item" src="<%= team[:foto] %>" alt="">
          </a>
        </div>
      </div>
      <% end %>
    </div>

  </div>
</div>
