---
title: Historiek
---
<% render '/partials/header.*', image: '/assets/images/design/header3.png' do %>
Historiek
<% end %>

<% jaren.zip([:yellow, :red, :blue].cycle).each do |hist, colour| %>
  <% section colour do %>
  <div class="container">
    <h1><%= hist[:jaar] %></h1>
    <img class="img-responsive" src="/assets/images/affiches/affiche<%= hist[:jaar]%>.jpg" alt="">
    <%= hist.compiled_content %>
    <h3>Line-Up</h3>
    <ul class="list-inline">
      <% hist[:lineup].each do |a| %>
      <li><%= a %></li>
      <% end %>
    </ul>
    <% if hist[:secondstage] %>
    <h3>Second Stage Line-Up</h3>
    <ul class="list-inline">

      <% hist[:secondstage].each do |a| %>
      <li><%= a %></li>
      <% end %>
    </ul>
    <% end %>
  </div>
  <% end %>
<% end %>
